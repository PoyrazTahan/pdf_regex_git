{
  "Police_No": {
    "pattern": "(\\d{8})\\s*/\\s*0",
    "group": 1,
    "description": "Policy number from header format like '64263026 / 0'"
  },
  "Police_Onceki_No": {
    "pattern": "ÖNCEKİ POL\\.NO\\s*:\\s*(\\d+)",
    "group": 1,
    "description": "Previous policy number"
  },
  "Police_Baslangic_Tarihi": {
    "pattern": "BAŞLAMA TARİHİ\\s*\\n\\s*BİTİŞ TARİHİ[\\s\\S]*?(\\d{2}/\\d{2}/\\d{4})\\s*\\n\\s*(\\d{2}/\\d{2}/\\d{4})",
    "group": 1,
    "description": "Üstte BAŞLAMA ve hemen ardından BİTİŞ başlıkları geldikten sonra ilk tarih = başlangıç"
  },
  "Police_Bitis_Tarihi": {
    "pattern": "BAŞLAMA TARİHİ\\s*\\n\\s*BİTİŞ TARİHİ[\\s\\S]*?(\\d{2}/\\d{2}/\\d{4})\\s*\\n\\s*(\\d{2}/\\d{2}/\\d{4})",
    "group": 2,
    "description": "Üstteki düzen içinde ikinci tarih = bitiş"
  },
    "Sigortali_TC_Kimlik_No": {
    "pattern": "([\\d\\*]+)\\s*\\n[^\\n]*TCK/VERGİ DR\\. NO",
    "group": 1,
    "description": "Customer TC identity number (masked) - appears BEFORE field name due to PDF alignment"
  },
  "Sigortali_Adi": {
    "pattern": "ORİENT SİGORTA A\\.Ş\\.\\s*_{30,}\\s*([A-ZÇĞIİÖŞÜ]+\\s+[A-ZÇĞIİÖŞÜ]+)",
    "group": 1,
    "description": "Customer full name from customer section"
  },
  "Sigortali_Adresi": {
    "pattern": "[A-ZÇĞIİÖŞÜ\\s]+\\s[A-ZÇĞIİÖŞÜ]+\\s*\\n([A-ZÇĞIİÖŞÜ\\s.,-:/]+)\\s*\\nSİGORTALI ADI SOYADI/ÜNVANI",
    "group": 1,
    "description": "Customer address after customer name, before field label"
  },
  "Sigortali_Eposta": {},
  "Sigortali_GSM": {
    "pattern": "(\\d{10})[^\\n]*\\n[^\\n]*:\\s*\\n[^\\n]*GSM / TEL",
    "group": 1,
    "description": "Customer mobile phone number - appears BEFORE field name due to PDF alignment"
  },
  "Sigortali_Meslegi": {
    "pattern": "MESLEK İNDİRİMİ KLOZU[\\s\\S]*?tarihinde\\s+([A-ZÇĞIİÖŞÜ]+)\\s+mesleğini",
    "group": 1,
    "description": "Customer profession from profession discount clause"
  },
  "Sigortali_Musteri_No": {
    "pattern": "MÜŞTERİ NO\\s*[^\\n]*?([A-Z0-9]+)\\s*SÜRE",
    "group": 1,
    "description": "Customer number from header"
  },
  "Sigortali_Vergi_No": {},
  "SBM_Tramer_Belge_No": {
    "pattern": "sbmPolNo\\s*:\\s*(\\d+)",
    "group": 1,
    "description": "SBM Tramer document number"
  },
  "SBM_Bim_Reference_No": {},
  "Arac_Plaka_No": {
    "pattern": "PLAKA\\s*:\\s*([0-9]{2}[A-Z]{1,3}[0-9]{2,4})",
    "group": 1,
    "description": "License plate number from vehicle section"
  },
  "Arac_Motor_No": {
    "pattern": "MOTOR NO\\s*:\\s*([A-Z0-9]+)",
    "group": 1,
    "description": "Vehicle engine number"
  },
  "Arac_Sasi_No": {
    "pattern": "ŞASİ NO\\s*:\\s*([A-Z0-9]+)",
    "group": 1,
    "description": "Vehicle chassis number"
  },
  "Arac_Marka_Tip": {
    "pattern": "MARKA\\s*:\\s*([A-ZÇĞIİÖŞÜ]+)",
    "group": 1,
    "description": "Vehicle brand from vehicle section"
  },
  "Arac_Model": {
    "pattern": "MODEL\\s*:\\s*(.*?)(?=\\nPLAKA|$)",
    "group": 1,
    "description": "Vehicle model from vehicle section"
  },
  "Arac_Model_Yili": {
    "pattern": "MODEL YILI\\s*:\\s*(\\d{4})",
    "group": 1,
    "description": "Vehicle model year"
  },
  "Arac_Kullanim_Sekli": {
    "pattern": "KULLANIM AMACI\\s*:\\s*(.*?)(?=\\n|$)",
    "group": 1,
    "description": "Vehicle usage type"
  },
  "Arac_Marka_Kodu": {},
  "Arac_Engelli_Mi": {},
  "Teminat_Oto_Cam_Klozu": {
    "pattern": "CAM HASARLARI KLOZU\\s*.*?herhangi bir muafiyet uygulanmayacaktır",
    "group": 0,
    "description": "Glass coverage clause - indicates no deductible for glass"
  },
  "Teminat_IMM_Bedeni_Maddi_Ayrimsiz_Bedeli": {
    "pattern": "İMM KOMBİNE\\s*([\\d\\.]+)",
    "group": 1,
    "description": "IMM combined coverage amount"
  },
  "Teminat_IMM_Manevi_Tazminat_Bedeli": {
    "patterns": [
      "(Manevi tazminat talepleri iş bu poliçe)",
      "(teminatları kapsamına dahil değildir)\\.?"
    ],
    "mode": "all",
    "description": "Manevi tazminat coverage - extracts both the opening clause and ending clause as separate values"
  },
  "Teminat_Indirim_Arttırim_Bilgileri": {
    "pattern": "((?:PEŞİN İNDİRİMİ[\\s\\S]*?%\\d+[\\s\\S]*?)?(?:MESLEK INDIRIMI[\\s\\S]*?%\\d+[\\s\\S]*?)?(?:ÖZEL MÜŞTERİ İND[\\s\\S]*?%\\d+[\\s\\S]*?)?(?:HASARSIZLIK[\\s\\S]*?\\d+\\.?KADEME))",
    "group": 1,
    "description": "Discount information from İNDİRİMLER section"
  },
  "Teminat_Ikame_Arac": {
    "pattern": "İKAME ARAÇ KLOZU.*?olay başına (\\d+)\\s*gün",
    "group": 1,
    "description": "Replacement vehicle coverage days"
  },
  "Teminat_Yedek_Parca": {
    "pattern": "TEDARİK PARÇA TÜRÜ\\s*.*?Orjinal parça;.*?tedarik edilir",
    "group": 0,
    "description": "Spare parts coverage - original parts provided"
  },
  "Teminat_Hasar_Kademesi_Bilgisi": {
    "pattern": "HASARSIZLIK\\s*İNDİRİMİ\\s*:\\s*(\\d)\\.*KADEME",
    "group": 1,
    "description": "No-claims discount level"
  },
  "Police_Gross_Price": {
    "pattern": "BRÜT PRİM\\s*\\s*([0-9,\\.]+)",
    "group": 1
  }
}
